{
  "name": "Getting Started Example",
  "version": "1.0",
  "description": "Build an Extension!",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
    "matches": [
      "https://*/*"
    ],
    "js": ["inject.js"]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "webNavigation"
  ],
  "web_accessible_resources": [
    "content.js"
  ],
  "browser_action": {
    "default_icon": "leaf.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
